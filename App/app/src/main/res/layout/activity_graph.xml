<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/stressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="12dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/stress_graph"
                app:layout_constraintBottom_toTopOf="@+id/stress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/stress"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/depressionBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="12dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/depression_graph"
                app:layout_constraintBottom_toTopOf="@+id/depression"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/depression"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="28dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="129dp"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/anxietyBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="12dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/anxiety_graph"
                app:layout_constraintBottom_toTopOf="@+id/anxiety"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/anxiety"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.423"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:fontFamily="@font/arial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597" />
</androidx.constraintlayout.widget.ConstraintLayout>